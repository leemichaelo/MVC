@model PayrollSystem.Models.UserLogin

@{
    ViewBag.Title = "Edit User";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-danger">
    Are you sure you want to Edit the following entry?
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

    <div class="row">

        <div class="col-md-6">

            <div class="col-md-6">
                @Html.LabelFor(m => m.Id, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Id, new { @class = "control-label" })
            </div>

            <div class="form-group">                
                @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.UserRole, new { @class = "control-label" })

                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "User",
                        Value = "User"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Administrator",
                        Value = "Administrator",
                        Selected = true
                    });
                }

                @Html.DropDownListFor(model => model.UserRole, listItems, "-- Select Status --")
            </div>

        </div>

        <div class="col-md-12">
            <div class="pad-top">
                <button type="submit" class="btn btn-success btn-lg margin-right">
                    <span class="glyphicon glyphicon-save"></span> Edit User
                </button>
            </div>
        </div>

    </div>
}

