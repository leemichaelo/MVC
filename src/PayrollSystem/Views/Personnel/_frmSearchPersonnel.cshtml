
<div class="container">
    <!--Wrapper Div-->
    @using (Html.BeginForm())
    {

        <div class="form-group row">
            <div class="col-4">
                @Html.Label("Last Name", new { @class = "control-label" })
                @Html.TextBox("searchRequest", null, new { @type = "text", @name="searchRequest", @class = "form-control", @placeholder = "Leave Blank To View All" })
            </div>
        </div>
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-save"></span> Search
        </button>
    }
</div>
