@model PayrollSystem.Models.Person

@{
    ViewBag.Title = "Delete Personnel";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-danger">
    Are you sure you want to delete the following entry?
</div>

<div class="row">
    <div class="col-lg-6">

        <div class="row">
            <div class="col-xs-8 col-sm-9">
                @Html.LabelFor(m => m.FirstName): @Html.Label(@Model.FirstName)
            </div>

            <div class="col-xs-8 col-sm-9">
                @Html.LabelFor(m => m.LastName): @Html.Label(@Model.LastName)
            </div>

                <div class="col-xs-8 col-sm-9">
                    @Html.LabelFor(m => m.PayRate): <label>@Model.PayRate</label>
                    
                </div>

                <div class="col-xs-8 col-sm-9">
                    <!--Formats the DateTime value to just Date-->
                    @Html.LabelFor(m => m.StartDate): @Model.StartDate.ToShortDateString()
                    @Html.LabelFor(m => m.EndDate): @Model.EndDate.ToShortDateString()
                </div>
            </div>



            @using (Html.BeginForm())
            {
                <div class="pad-top">
                    <button type="submit" class="btn btn-danger btn-lg margin-right">
                        <span class="glyphicon glyphicon-trash"></span> Delete
                    </button>
                    <a href="@Url.Action("frmViewPersonnel")" class="btn btn-warning btn-lg">
                        <span class="glyphicon glyphicon-remove"></span> Cancel
                    </a>
                </div>
            }

        </div>

    </div>
