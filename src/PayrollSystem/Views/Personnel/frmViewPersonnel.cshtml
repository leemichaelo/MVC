@model List<PayrollSystem.Models.Person>

@{
    ViewBag.Title = "View Personnel";
}

<h2>@ViewBag.Title</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}

<h2></h2>

@Html.Partial("_frmSearchPersonnel")

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Payrate</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                    <td>@person.PayRate</td>
                    <td>@person.StartDate.ToShortDateString()</td>
                    <td>@person.EndDate.ToShortDateString()</td>
                    <td>
                        <a href="@Url.Action("frmEditPersonnel", new { id = person.Id })" class="btn btn-warning btn-sm margin-right">
                            <span class="glyphicon glyphicon-edit"></span><span class="hidden-xs"> Edit</span>
                        </a>

                        <a href="@Url.Action("frmDeletePersonnel", new { id = person.Id })" class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-trash"></span><span class="hidden-xs"> Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
